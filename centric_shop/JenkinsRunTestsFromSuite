pipeline {
  agent any

  stages {
    stage('Divide Test Cases') {
      steps {
        dir('centric_shop') {
        script {
          // Run the Ruby script using cuke-slicer
          sh 'bundle install'
          sh 'su jenkins'
          sh 'pwd'
          def rubyPath = sh(returnStdout: true, script: 'which ruby').trim()
          sh "${rubyPath} divide_test_cases.rb"
        }
       }
     }
   }

    // Add more stages for additional pipeline steps
    // ...
  }
}
